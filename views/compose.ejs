<%- include("partials/header"); -%>
<h1>Compose</h1>

<form action="/form" name="formulario" method="POST"><br>

  <div class="form-group">
    <label for="title">Title</label>
    <input class="form-control" id="title" placeholder="Enter a title" name="title" autocomplete="off" autofocus></input>
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    <input class="form-control" id="author" placeholder="Enter an author" name="author" autocomplete="off"></input>
  </div>
  
  <div class="form-group">
    <label for="content">Content</label>
    <textarea class="form-control" id="content" rows="4" placeholder="Enter your content" name="content"></textarea>
  </div>
  
  <button name="button" class="btn btn-primary">Publish</button>

</form>
<%- include("partials/footer"); -%>